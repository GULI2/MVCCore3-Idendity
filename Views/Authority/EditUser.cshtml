@model JNGH_IDENDITY.Models.EditUser

@{
    ViewData["Title"] = "编辑账号";
}
<link href="~/lib/chosen/bootstrap-chosen.css" rel="stylesheet">
<link href="~/lib/chosen/chosen.css" rel="stylesheet">
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>编辑账号</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="index.html">主页</a>
            </li>
            <li class="breadcrumb-item">
                <a>权限管理</a>
            </li>
            <li class="breadcrumb-item">
                <a>用户管理</a>
            </li>
            <li class="breadcrumb-item">
                <a>编辑账号</a>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight ecommerce" style="overflow:auto">

    <div class="ibox-content">
        <div class="row">

            <div class="col-md-12">
                <form asp-action="EditUser" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="UserId" />
                    <div class="col-md-12">
                        <div class="form-group row">
                            <label asp-for="UserName" class="col-sm-2 col-form-label">账号</label>
                            <div class="col-sm-10">
                                <input asp-for="UserName" class="form-control" readonly="readonly" />
                            </div>
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <label asp-for="Email" class="col-sm-2 col-form-label">邮箱</label>
                            <div class="col-sm-10">
                                <input asp-for="Email" class="form-control" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <label asp-for="PhoneNumber" class="col-sm-2 col-form-label">电话</label>
                            <div class="col-sm-10">
                                <input asp-for="PhoneNumber" class="form-control" />
                            </div>
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <label asp-for="EmpName" class="col-sm-2 col-form-label">员工</label>
                            <div class="col-sm-10">
                                <input readonly="readonly" asp-for="EmpName" class="form-control" />
                            </div>
                            <span asp-validation-for="EmpName" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">角色</label>
                            <div class="col-sm-10">
                                @Html.DropDownListFor(model => model.RoleIds, (IEnumerable<SelectListItem>)ViewBag.RoleList, new { @class = "form-control chosen ", multiple = "multiple" })
                            </div>
                            <span asp-validation-for="RoleIds" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <a asp-action="UserList" class="btn btn-default">取消</a>
                            <input type="submit" value="确定" class="btn btn-primary" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        <script src="~/lib/chosen/chosen.jquery.js"></script>
        <script type="text/javascript">
            $(function () {
                $(function () {
                    $(".chosen-deselect").chosen(
                        {
                            allow_single_deselect: true
                        });
                    $(".chosen").chosen(
                        {
                            placeholder_text_multiple: "--请选择--"
                        });
                    $(".chosen").chosen().change();
                    $(".chosen").trigger('liszt:updated');
                });
            });
        </script>
    }
