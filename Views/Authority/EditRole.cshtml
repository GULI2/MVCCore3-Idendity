@model JNGH_IDENDITY.Models.AspNetRoles
@{
    ViewData["Title"] = "EditRole";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>编辑角色</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="index.html">主页</a>
            </li>
            <li class="breadcrumb-item">
                <a>权限管理</a>
            </li>
            <li class="breadcrumb-item">
                <a>角色管理</a>
            </li>
            <li class="breadcrumb-item">
                <a>编辑角色</a>
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight ecommerce" style="overflow:auto">
    <div class="row">
        <div class="col-md-12">
            <div class="ibox-content">
                <form asp-action="EditRole" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col-md-12">

                        <div class="form-group row">
                            <label asp-for="Id" class="col-sm-2 col-form-label">角色编码</label>
                            <div class="col-sm-10">
                                <input asp-for="Id" class="form-control" readonly="readonly" />
                            </div>
                            <span asp-validation-for="Id" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Name" class="col-sm-2 col-form-label">角色</label>
                            <div class="col-sm-10">
                                <input asp-for="Name" class="form-control" readonly="readonly" />
                            </div>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <label asp-for="RoleDescription" class="col-sm-2 col-form-label">描述</label>
                            <div class="col-sm-10">
                                <input asp-for="RoleDescription" class="form-control" />
                            </div>
                            <span asp-validation-for="RoleDescription" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <a asp-action="RoleList" class="btn btn-default">取消</a>
                            <input type="submit" value="确定" class="btn btn-primary" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

