@model JNGH_IDENDITY.Models.ViewPositions

@{
    ViewData["Title"] = "新增职务";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>新增职务</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="index.html">主页</a>
            </li>
            <li class="breadcrumb-item">
                <a>权限管理</a>
            </li>
            <li class="breadcrumb-item">
                <a>部门管理</a>
            </li>
            <li class="breadcrumb-item">
                <a>新增职务</a>
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight ecommerce" style="overflow:auto">
    <div class="row">
        <div class="col-md-12">
            <div class="ibox-content">
                <form asp-action="CreatePosition">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col-md-12">
                        <div class="form-group row" hidden="hidden">
                            <label asp-for="PostId" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="PostId" class="form-control" />
                            </div>
                            <span asp-validation-for="PostId" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <label asp-for="PostName" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="PostName" class="form-control" />
                            </div>
                            <span asp-validation-for="PostName" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <label asp-for="PostLevel" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="PostLevel" class="form-control" />
                            </div>
                            <span asp-validation-for="PostLevel" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <label asp-for="PostOrder" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="PostOrder" class="form-control" />
                            </div>
                            <span asp-validation-for="PostOrder" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <label asp-for="DeptName" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="DeptName" class="form-control" readonly="readonly" />
                            </div>
                            <span asp-validation-for="DeptName" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <label asp-for="FullName" class="col-sm-2 col-form-label">所属公司</label>
                            <div class="col-sm-10">
                                <input asp-for="FullName" class="form-control" readonly="readonly" />
                            </div>  <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                        <div class="form-group row" hidden="hidden">
                            <label asp-for="CompId" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="CompId" class="form-control" />
                            </div>
                            <span asp-validation-for="CompId" class="text-danger"></span>
                        </div>
                        <div class="form-group row" hidden="hidden">
                            <label asp-for="DeptId" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="DeptId" class="form-control" />
                            </div>
                            <span asp-validation-for="DeptId" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <a asp-action="DeptList" class="btn btn-default">取消</a>
                            <input type="submit" value="确定" class="btn btn-primary" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
